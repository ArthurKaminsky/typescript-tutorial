{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "lib": ["es2020", "es6", "es2017", "dom"],
        "baseUrl": "./"
    },
    "exclude": ["node_modules", "**/*.spec.ts"]
}